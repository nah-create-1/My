# AI Cursor Clone Environment Configuration

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Model Configuration
TRANSFORMERS_CACHE=./models
HF_HOME=./models
MODEL_NAME=Qwen/Qwen2.5-Coder-7B-Instruct

# GPU Configuration (adjust based on your setup)
CUDA_VISIBLE_DEVICES=0
TORCH_CUDA_ARCH_LIST="7.5;8.0;8.6"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Database Configuration (optional)
REDIS_URL=redis://localhost:6379
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ai_cursor

# Security (generate secure keys for production)
SECRET_KEY=your-super-secret-key-here
JWT_SECRET=your-jwt-secret-here

# File System
WORKSPACE_ROOT=./workspace
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.jsx,.tsx,.html,.css,.json,.md,.txt,.yaml,.yml,.xml,.sql,.sh,.bash

# Model Training
TRAINING_OUTPUT_DIR=./training_outputs
MAX_CONCURRENT_TRAINING_JOBS=1
AUTO_CLEANUP_TRAINING_DAYS=7

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Performance
MAX_WORKERS=1
TIMEOUT_SECONDS=300
MAX_MEMORY_GB=8

# Features
ENABLE_SENSORLESS_MODE=true
ENABLE_CUSTOM_TRAINING=true
ENABLE_WEBSOCKET=true
ENABLE_FILE_WATCHER=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000